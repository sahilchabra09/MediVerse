generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  clerkId    String   @unique
  email      String   @unique
  firstName  String
  lastName   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}